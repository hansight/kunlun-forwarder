#agent use  threads
agent.pool.size=10
#what for agent file read ,where  pos tore,when process file this is must be set
#  new only can use:
#1.com.hansight.kunlun.collector.position.store.SQLiteReadPositionStore
#2.com.hansight.kunlun.collector.position.store.FileReadPositionStore
agent.read.position.store.class=com.hansight.kunlun.collector.agent.position.store.ZookeeperReadPositionStore
# where to store the file pos has processed;
agent.read.position.store.position=./
# how Many of the line to store the file pos;
agent.read.position.store.offset=5000
# how Much of the file buffer size to process;
agent.file.reader.thread.buffer=1048576
# max size that the reader product while to wait writer
agent.queue.thread.max.size=10000
# the size cache for send to kafka
agent.write.cache.size=1000
# how ms that the reader  wait writer once
agent.reader.thread.wait.times=1000
agent.write.class=com.hansight.kunlun.collector.mq.kafka.KafkaLogWriter
# how ms that the writer  wait reader once when queue size is zero
agent.write.thread.wait.times=1000
# snmp, syslog use master/worker mode
# so, the middle queue size can set by the property "agent.queue.size"
# and default size is 100000.  
# worker thread count can set by ther property "agent.writer.thread.count"
# and default count is 2
agent.queue.size=100000
agent.writer.thread.count=2
use.metric=true
metric.path=./metric/
agent.id=agent
